#include <iostream>
using namespace std;

int main() {
 
 try
 {
     int num1, num2;
     
     cout << "Enter the 1st number: " << endl;   
     cin >> num1;
     
     cout << "Enter the 2nd number: " << endl;
     cin >> num2;
     
     if(num2 == 0)
     {
     throw "Divided by zero is not possible";     
     }
     
     double result = (double)num1 / num2;
     cout << "Result: " << result << endl;   
}

catch(const char* x)
{

cout << x << endl;
    
} 

    

     

    return 0;
}
// Exception handling(Sharif Chowdhury ,Lec-77)
#include <iostream>
using namespace std;

void positive(int a)
{
cout << "a: " << a << endl;
if(a < 1)
{
throw a;
}
}

int main() {
    
  try
  { 
  positive(5);
  positive(-5);
  positive(6);
  }
  
  catch(int e)
  {
  cout << "Exception: " << e << endl;    
  }
    return 0;
}
